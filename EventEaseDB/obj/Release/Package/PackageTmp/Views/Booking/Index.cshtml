@model IEnumerable<EventEaseDB.Models.Booking>

@{
    ViewBag.Title = "Booking List";
}


<h2>Booking List</h2>

<!---the search button-->@using (Html.BeginForm("Index", "Booking", FormMethod.Get))
{
    <div class="form-inline mb-3">
        <input type="text" name="searchString" value="@Request.QueryString["searchString"]" class="form-control mr-2" placeholder="Search by venue or event name..." />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Booking Date</th>
        <th>Customer Name</th>
        <th>Customer Email</th>
        <th>Event Name</th>
        <th>Venue ID</th>
        <th>Number of Guests</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.BookingDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @item.CustomerName
            </td>
            <td>
                @item.CustomerEmail
            </td>
            <td>
                @item.EventName
            </td>

            <td>
                @item.VenueID
            </td>
            <td>
                @item.NumberOfGuests
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookingID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BookingID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BookingID })
            </td>
        </tr>
    }
</table>