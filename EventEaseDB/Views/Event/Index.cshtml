@model IEnumerable<EventEaseDB.Models.Event>

@{
    ViewBag.Title = "Event List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@using EventEaseDB.Models
@{
    var eventTypes = ViewData["EventTypes"] as List<EventType>;
    var venues = ViewData["Venues"] as List<Venue>;
}

<h2>Event List</h2>

<form method="get" action="@Url.Action("Index")" class="form-inline mb-3">

    <div class="form-group mr-2">
        <label for="searchType" class="mr-2">Event Type</label>
        <select name="searchType" class="form-control">
            <option value="">-- All Types --</option>
            @foreach (var type in eventTypes)
            {
                <option value="@type.Name">@type.Name</option>
            }
        </select>
    </div>

    <div class="form-group mr-2">
        <label for="venueId" class="mr-2">Venue</label>
        <select name="venueId" class="form-control">
            <option value="">-- All Venues --</option>
            @foreach (var venue in venues)
            {
                <option value="@venue.VenueID">@venue.VenueName</option>
            }
        </select>
    </div>

    <div class="form-group mr-2">
        <label for="startDate" class="mr-2">Start Date</label>
        <input type="date" name="startDate" class="form-control" />
    </div>

    <div class="form-group mr-2">
        <label for="endDate" class="mr-2">End Date</label>
        <input type="date" name="endDate" class="form-control" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a href="@Url.Action("Index", "Event")" class="btn btn-secondary ml-2">Clear</a>
    </div>
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <thead>
        <tr>
            <th>EventID</th>
            <th>Event Name</th>
            <th>Date</th>
            <th>Description</th>
            <th>Venue</th>  <!-- Venue Name column -->
            <th>Actions</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueName)  <!-- Display the venue name -->
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EventID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EventID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
            </td>
        </tr>
    }

</table>
